<src:ACommunicationWindow x:Class="MVC.WPF.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:src="clr-namespace:MVC.WPF"
        Title="$ChoiceTitle" SizeToContent="WidthAndHeight" ResizeMode="NoResize" MinWidth="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StatusBar Grid.Row="2" Name="statusBar1" HorizontalContentAlignment="Right" FlowDirection="RightToLeft" BorderThickness="0,1,0,0" BorderBrush="{StaticResource {x:Static SystemColors.AppWorkspaceBrushKey}}">
            <StatusBarItem Padding="0">
                <Button Content="$Cancel" Grid.Column="1" Grid.Row="1" Height="23" Name="cancelBtn" Margin="3" HorizontalAlignment="Right" Width="75" Click="cancelBtn_Click" />
            </StatusBarItem>
            <StatusBarItem Padding="0" >
                <Button Content="$Select" Grid.Row="1" Height="23" Name="selectBtn" Margin="3" HorizontalAlignment="Right" Width="75" Click="button1_Click" />
            </StatusBarItem>
        </StatusBar>
        <GroupBox Header="$ComboTitle" Name="messageGrp" Margin="5">
                <ComboBox Height="23" Name="choiceCombo" />
            </GroupBox>
    </Grid>
</src:ACommunicationWindow>
