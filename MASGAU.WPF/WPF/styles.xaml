<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type CheckBox}" x:Key="DataGridCheckBox">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    <Style TargetType="{x:Type Window}">
        <Setter Property="Background" Value="Red"></Setter>
    </Style>

    <Style TargetType="{x:Type Grid}" x:Key="BodyStyle" >
        <Setter Property="BorderBrush" Value="{StaticResource {x:Static SystemColors.AppWorkspaceBrushKey}}" />
        <Setter Property="BorderWidth" Value="0,0,1,0" />
    </Style>
</ResourceDictionary>